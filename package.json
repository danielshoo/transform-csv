{
  "name": "transform-csv",
  "version": "1.0.0",
  "description": "Reconstruct CSVs into alternate file formats with cell-value transforms",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev:esbuild": "esbuild --bundle --sourcemap --outfile=dist/index.js index.ts",
    "dev:esbuild:node": "esbuild --bundle --platform=node --sourcemap --outfile=dist/index.js index.ts",
    "test": "ts-node test/test.ts",
    "test:inspect": "node --inspect -r ts-node/register ./test/test.ts",
    "test:coverage": "nyc ts-node test/test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielshoo/transform-csv.git"
  },
  "keywords": [
    "csv",
    "transform"
  ],
  "author": "Daniel Shuster",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielshoo/transform-csv/issues"
  },
  "homepage": "https://github.com/danielshoo/transform-csv#readme",
  "dependencies": {
    "esbuild": "0.17.13",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1"
  }
}
